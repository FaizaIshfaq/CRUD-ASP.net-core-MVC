@model List<WebApplication4.Models.Student>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>index form</h1>

<h2> Add student</h2>

<form asp-controller="Home" asp-action="addstudentform" method="post">
     <div asp-validation-summary="All" class="text-danger"></div>
    <label for="Name">Name</label>
    <input type="text" name="Name" required /><br />
    <label for="Age">Age</label>
    <input type="number" name="Age" required /><br />
    <label for="Password">Password</label>
    <input type="text" name="Password" required /><br />
    <label for="Phone">Phone</label>
    <input type="tel" name="Phone" required /><br />

    <input type="submit" /><br />

</form>

<h2>Student List</h2>
<table>
     <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (WebApplication4.Models.Student i in Model)
            {
                    <tr>
                    <td>@i.Name</td>

                    <td>@i.Age</td>

                    <td>@i.Password</td>

                    <td>@i.Phone</td>

                    <td><a href="Home/editstudentform/@i.Id">Edit</a></td>

                            <td><a href="Home/deletestudent/@i.Id" class="delete-link">delete</a></td>
                    </tr>

            }
        }
    </tbody>
</table>
