@model WebApplication4.Models.Student

<h1>Edit Form</h1>

<form action="/Home/editstudent" method="post">

    <input type="text" name="Id" value="@Model.Id" hidden />

    <label for="Name">Name:</label>
    <input type="text" value="@Model.Name" name="Name" />

    <label for="Age">Age:</label>
    <input type="number" value="@Model.Age" name="Age" />

    <label for="Password">Password:</label>
    <input type="text" value="@Model.Password" name="Password" />

    <label for="Phone">Phone:</label>
    <input type="tel" value="@Model.Phone" name="Phone" />

    <input type="submit" value="Submit" />

</form>
